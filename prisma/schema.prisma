generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         Int     @id @default(autoincrement())
  email      String  @unique
  alias_name String?
  harems     Harem[]
}

model Harem {
  id        Int        @id @default(autoincrement())
  name      String
  user      User?      @relation(fields: [userId], references: [id])
  userId    Int?
  prospects Prospect[]
  order     Int        @default(0)
}

model Prospect {
  id                 Int      @id @default(autoincrement())
  name               String
  harem              Harem?   @relation(fields: [haremId], references: [id])
  haremId            Int?
  notes              String   @default("")
  hotLead            Boolean  @default(false)
  haremOrder         Int      @default(0)
  timeInCurrentHarem DateTime @default(now())
  createdAt          DateTime @default(now())
  updatedAt          DateTime @default(now()) @updatedAt
}
